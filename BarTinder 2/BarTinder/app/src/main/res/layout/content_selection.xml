<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ntunick19.bartinder.selection"
    tools:showIn="@layout/activity_selection">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Your Drinks"
        android:id="@+id/textView2"
        android:layout_marginTop="77dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="36dp"
        android:singleLine="false"
        android:password="false"
        android:phoneNumber="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deutschland Destructors"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="43dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alcohol"
        android:id="@+id/alcohol_button"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/textView2"
        android:onClick="selectAlcohol"
        android:layout_alignEnd="@+id/mix_button"
        android:layout_alignStart="@+id/mix_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mixers"
        android:id="@+id/mixers_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="selectMixers"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp" />
    
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mix it up!"
        android:id="@+id/mix_button"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp" />

</RelativeLayout>
