<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ntunick19.bartinder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".selection"
            android:label="@string/title_activity_selection"
            android:theme="@style/AppTheme.NoActionBar" />

        <intent-filter>
            <action android:name="com.example.ntunick19.bartinder.selection" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>

        <activity
            android:name=".alcohol"
            android:label="@string/title_activity_alcohol"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".mixers"
            android:label="@string/title_activity_mixers"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".result"
            android:label="@string/title_activity_result"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
